{
  "manifest_version": 3,
  "name": "Aprimo DAM Collection Crawler",
  "version": "0.2.0",
  "description": "Crawl Aprimo DAM collection and space pages, extract asset metadata, resume after interruption, and export JSON/CSV.",
  "permissions": ["storage", "unlimitedStorage", "downloads", "activeTab", "scripting", "nativeMessaging"],
  "host_permissions": [
    "https://*.aprimo.com/*",
    "https://r1.previews.aprimo.com/*",
    "https://*.previews.aprimo.com/*"
  ],
  "background": {
    "service_worker": "worker.js",
    "type": "module"
  },
  "icons": {
    "16": "assets/images/icon.png",
    "32": "assets/images/icon.png",
    "48": "assets/images/icon.png",
    "128": "assets/images/icon.png"
  },
  "action": {
    "default_title": "DAM Crawler",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/icon.png",
      "32": "assets/images/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.aprimo.com/dam/collections/*",
        "https://*.aprimo.com/dam/spaces/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
